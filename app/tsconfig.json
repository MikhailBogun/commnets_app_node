  "compilerOptions": {
    "target": "es6",
    "module": "commonjs",
    "outDir": "./build",
    "noImplicitAny": false,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true
  },
  "include": [
    "**/*"
],
  "exclude": ["src/types/*.ts", "node_modules", ".vscode"]
}
